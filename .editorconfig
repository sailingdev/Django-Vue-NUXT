# editorconfig.org
root = true

[*]
indent_style = space
indent_size = 4
end_of_line = lf
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = true

[*.{py,rst,ini}]
indent_size = 4
indent_style = space
max_line_length = 119

[*.{html,css,json,yml}]
indent_size = 4
indent_style = space

[*.md]
trim_trailing_whitespace = false
